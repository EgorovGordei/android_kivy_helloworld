BoxLayout:
    orientation: 'vertical'
    MDLabel:
        text: app.last_message
	MDTextField:
	    id: my_message_input
		hint_text: "Enter message"
		mode: "fill"
		fill_color: 0, 0, 0, .4
		on_text: app.my_message_input_ontext()
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        Button:
            text: 'Press to get last message'
            on_press: app.get_last_message()
        Button:
            text: 'Press to send message'
            on_press: app.send_message()